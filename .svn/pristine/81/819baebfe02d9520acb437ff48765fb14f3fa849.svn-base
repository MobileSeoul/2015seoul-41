<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/detail_hospital_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/title5"
        android:gravity="center"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:text="병원 이름"
        android:textColor="#616161"
        android:textSize="23sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ebebeb"
        android:paddingBottom="20dp"
        android:paddingTop="10dp" >

        <TextView
            android:id="@+id/title_phone_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_margin="5dp"
            android:clickable="true"
            android:paddingTop="20dp"
            android:text="전화번호"
            android:textSize="20sp"
            android:textStyle="bold"
            android:color="#e0e0e0" />

        <TextView
            android:id="@+id/detail_phone_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/title_phone_number"
            android:layout_centerHorizontal="true"
            android:layout_margin="5dp"
            android:autoLink="phone"
            android:clickable="true"
            android:text="02-0000-0000"
            android:textColor="#cf0000"
            android:textColorLink="#cf0000"
            android:textSize="25sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/detail_available_area"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/detail_phone_number"
            android:layout_centerHorizontal="true"
            android:layout_margin="5dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingTop="10dp" >

            <TextView
                android:id="@+id/title_available_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:text="가용병상 수"
                android:textSize="20sp"
                android:textStyle="bold"
                android:color="#e0e0e0" />

            <TextView
                android:id="@+id/detail_available_number"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:clickable="true"
                android:gravity="right"
                android:text="0"
                android:textColor="#21b0a4"
                android:textSize="22sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/detail_wait_area"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/detail_available_area"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingTop="5dp" >

            <TextView
                android:id="@+id/title_wait_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:text="대기인원 수"
                android:textSize="20sp"
                android:textStyle="bold"
                android:color="#e0e0e0" />

            <TextView
                android:id="@+id/detail_wait_number"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:clickable="true"
                android:gravity="right"
                android:text="0"
                android:textColor="#21b0a4"
                android:textSize="22sp"
                android:textStyle="bold" />
        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#cfcfcf" />

    <TextView
        android:id="@+id/detail_find_near_hospital"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/textview_color"
        android:clickable="true"
        android:gravity="center"
        android:padding="20dp"
        android:text="지도에서 근처 병원 현황 조회"
        android:textColor="#616161"
        android:textSize="20sp"
        android:textStyle="bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#cfcfcf" />

    <TextView
        android:id="@+id/detail_send_my_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/textview_color"
        android:clickable="true"
        android:gravity="center"
        android:padding="20dp"
        android:text="지인에게 위치 전송"
        android:textColor="#616161"
        android:textSize="20sp"
        android:textStyle="bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#cfcfcf" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <ImageView
        android:id="@+id/detail_favorite_add"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/link"
        android:clickable="true" />

    <ImageView
        android:layout_width="140dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_marginBottom="50dp"
        android:background="@drawable/favorite_add" />

</LinearLayout>